
<div class="transactions">
  <div class="content">

  <h1>Транзакції</h1>
    <table>
      <thead>
        <tr>
          <th><%= sort_link(@q, :category, "Категорія", default_order: :desc) %></th>
          <th><%= sort_link(@q, :operation_type, "Тип операції", default_order: :desc) %></th>
          <th><%= sort_link(@q, :amount, "Сума", default_order: :desc) %></th>
          <th><%= sort_link(@q, :description, "Опис", default_order: :desc) %></th>
          <th><%= sort_link(@q, :updated_at, "Дата", default_order: :desc) %></th>
          <th>Управління</th>
        </tr>
      </thead>

      <tbody>
        <% @transactions.each do |element| %>
          <tr>
            <th><%= element.category %></th>
            <th><%= element.operation_type %></th>
            <th><%= element.amount %></th>
            <th><%= element.description %></th>
            <th><%= element.updated_at.strftime("%Y-%m-%d") %></th>
            <th>
              <%= link_to "Змінити", edit_transaction_path(element) %>
              <%= link_to "Видалити", transaction_path(element), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </th>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @transactions%>
    <button class="button"><%= link_to "Додати нову транзакцію", new_transaction_path %></button>

  
  </div>
</div>




